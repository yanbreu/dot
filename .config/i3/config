# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

###
# Variables
##

# General
set $mod 	Mod4
set $gaps	10

# Font
set $font 	pango:Inconsolata
set $fontSize 	12

# Terminal
set $terminal	terminator


# workspace names
set $workspace0	"0: Home"
set $workspace1	"1: Terminal"
set $workspace2	"2: Chrome"
set $workspace3	"3: E-Mail"
set $workspace4	"4"
set $workspace5	"5"
set $workspace6	"6"
set $workspace7	"7"
set $workspace8	"8"
set $workspace9	"9"

###
# Config
##

# Set font
font $font 12

# Gaps
gaps inner $gaps

# Transparent when inactive
exec_always compton --config ~/.config/compton.conf

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec $terminal

# kill focused window
bindsym $mod+Shift+q kill

# start rofi (a program launcher)
bindsym $mod+r exec rofi -show run

# change focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+l move up
bindsym $mod+Shift+odiaeresis move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child

# switch to workspace
bindsym $mod+1 workspace $workspace0
bindsym $mod+2 workspace $workspace1
bindsym $mod+3 workspace $workspace2
bindsym $mod+4 workspace $workspace3
bindsym $mod+5 workspace $workspace4
bindsym $mod+6 workspace $workspace5
bindsym $mod+7 workspace $workspace6
bindsym $mod+8 workspace $workspace7
bindsym $mod+9 workspace $workspace8
bindsym $mod+0 workspace $workspace9

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $workspace0
bindsym $mod+Shift+2 move container to workspace $workspace1
bindsym $mod+Shift+3 move container to workspace $workspace2
bindsym $mod+Shift+4 move container to workspace $workspace3
bindsym $mod+Shift+5 move container to workspace $workspace4
bindsym $mod+Shift+6 move container to workspace $workspace5
bindsym $mod+Shift+7 move container to workspace $workspace6
bindsym $mod+Shift+8 move container to workspace $workspace7
bindsym $mod+Shift+9 move container to workspace $workspace8
bindsym $mod+Shift+0 move container to workspace $workspace9

# program to workspace
#	identifier		workspace
assign	[instance="chromium"]	$workspace2


# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+F4 exec "i3-nagbar -t warning -m 'Do you really want to shutdown?' -b 'Yes' 'shutdown -t 3'"

# move window (you can also use the mouse for that)
mode "move" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym odiaeresis resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+m mode "move"



# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3blocks
	
	colors {
		#color class		border	back.	text
		focused_workspace	#000000	#007090	#ffffff
		active_workspace	#000000	#d8b100	#ffffff
		inactive_workspace	#000000	#000000	#888888
		urgent_workspace	#000000	#bf7c00	#ffffff
	}
}
